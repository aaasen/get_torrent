
{
	"info" : {
		"name" : "Kick Ass Torrents",
		"url" : "http://kat.ph/",

		"headers" : {
			"User-Agent" : "curl/7.19.4 (universal-apple-darwin10.0) libcurl/7.19.4 OpenSSL/0.9.8k zlib/1.2.3",
			"Host" : "127.0.0.1",
			"Accept" : "*/*" 
		}
	},

	"search" : {
		"schema" : "http://kat.ph/usearch/<[[search_term]]><%20category%3A[[category]]></[[page_number]]/><?field=[[sort_code]]>",
		
		"sort_codes" : {
			"default" : "none",
			"date" : "time_add",
			"size" : "size",
			"seeders" : "seeders",
			"leechers" : "leechers"
		},

		"categories" : {
			"default" : "none",
			"audio" : "music",
			"movies" : "movies",
			"tv" : "tv",
			"applications" : "applications",
			"books" : "books",
			"games" : "games"
		},

		"page_number" : {
			"default" : "none"
		},

		"parser" : {
			"method" : "css",
			"selector" : "div.torrentname > a.torType.pdfType",
			"attr" : "href"
		}
	},

	"torrent" : {
		"schema" : "http://kat.ph<[[url]]>",

		"description" : {
			"method" : "css",
			"selector" : "div.data > div#desc",
			"attr" : "text"
		},

		"seeders" : {
			"method" : "css",
			"selector" : "strong[itemprop=seeders]",
			"attr" : "text"
		},

		"leechers" : {
			"method" : "css",
			"selector" : "strong[itemprop=leechers]",
			"attr" : "text"
		},

		"magnet" : {
			"method" : "css",
			"selector" : "a.magnetlinkButton",
			"attr" : "href"
		}
	},

	"comment" : {
		"text" : {
			"method" : "css",
			"selector" : "div#comments > div.comment",
			"attr" : "text"
		}
	}
}
